{
  "compilerOptions": {
    "target": "es6",                                  
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",                           
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "moduleResolution": "node",
    "strictNullChecks": true,                    
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
